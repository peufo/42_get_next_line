{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang générer le fichier actif",
      "command": "/usr/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-fsanitize=address",
        "-g",
        "${file}",
        "get_next_line.c",
        "get_next_line_utils.c",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tâche générée par le débogueur."
    }
  ],
  "version": "2.0.0"
}
